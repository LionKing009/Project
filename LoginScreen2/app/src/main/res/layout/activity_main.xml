<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#F5F8F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_action_name"
            android:padding="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Verify Aadhaar Manually"
            android:textStyle="bold"
            android:textSize="14sp"

            android:layout_height="wrap_content"/>


    </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:text="Aadhaar Number*"
    android:paddingLeft="20dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content"/>


        <EditText
            android:layout_width="match_parent"
            app:boxBackgroundColor="@android:color/white"
            android:drawableRight="@drawable/aadhaar_icon"
            android:hint="1234 5678 9012"
            android:inputType="number"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />


    <TextView
        android:layout_width="wrap_content"
        android:text="Full Name*"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content"/>


        <EditText
            android:layout_width="match_parent"
            app:boxBackgroundColor="@android:color/white"
            android:background="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:hint="Ex: Jay Chokshi"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

    <TextView
        android:layout_width="wrap_content"
        android:text="Date Of Birth*"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content"/>


        <EditText
            android:layout_width="match_parent"
            app:boxBackgroundColor="@android:color/white"
            android:background="@android:color/white"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:hint="23 Nov, 2027"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/calendar"
            />

    <TextView
        android:layout_width="wrap_content"
        android:text="Gender*"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content"/>


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            app:boxBackgroundColor="@android:color/white"
            android:drawableRight="@drawable/arrow_down"
            android:hint="Select your gender"
            android:background="@android:color/white"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            />



    <TextView
        android:layout_width="wrap_content"
        android:text="Email ID"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content"/>


        <EditText
            android:layout_width="match_parent"
            app:boxBackgroundColor="@android:color/white"
            android:background="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:hint="EX: Jaychokshi2000@gmail.com"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_margin="10dp"
    android:paddingTop="10dp"
    android:background="@drawable/circle_radius"
    android:paddingBottom="10dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:text="SUBMIT"/>
</LinearLayout>